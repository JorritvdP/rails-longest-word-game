<h1 class="text-center p-2">New Word Game</h1>

<ul class="list-inline text-center m-3">
    <% @letters.each do |letter|  %>
  <li class="list-inline-item p-2 btn btn-primary" style="width:40px"> <%= letter  %> </li>
    <% end %>
</ul>

  <form action="/score" method="POST" data-turbo="false" class="mt-3 p-2 d-flex w-50 m-auto">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters  %>
    <input type="text" name="word" id="word" class="form-control" placeholder="Please type your word">
    <input type="submit" value="Play!" class="btn btn-primary">
  </form>
